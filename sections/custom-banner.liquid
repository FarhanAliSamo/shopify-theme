{% schema %}
{
    "name": "Custom Banner",
    "settings": [
        {
            "type": "image_picker",
            "id": "banner_image",
            "label": "Banner Image"},
        {
            "type": "text",
            "id": "heading",
            "label": "Heading",
            "default": "That our customer banner "
        },
        {
            "type": "text",
            "id": "description",
            "label": "Description",
            "default": "that our custom dscription "
        },
        {
            "type": "color",
            "id": "background_color",
            "label": "Background Color",
            "default": "#ffffff"
        },
        {
            "type": "text",
            "id": "button_text",
            "label": "Button Label",
            "default": "Click Me"
        },
        {
            "type": "url",
            "id": "button_link",
            "label": "Button Link",
            "default": "/"
        },
        {
            "type": "checkbox",
            "id": "show_button",
            "label": "Show Button",
            "default": true
        },
        {
            "type": "select",
            "id": "text_alignment",
            "label": "Text Alignment",
            "options": [
                {
                    "value": "left",
                    "label": "Left"
                },
                {
                    "value": "center",
                    "label": "Center"
                },
                {
                    "value": "right",
                    "label": "Right"
                }
            ],
            "default": "left"
        },


    ]
    ,
    "presets": [
        {
            "name": "Custom Banner",
            "category": "Custom"
        }
    ],
}
{% endschema %}


<div style="background-color: {{ section.settings.background_color }}; padding: 20px; text-align: {{section.settings.text_alignment}};">
    <h1>{{ section.settings.heading }}</h1>
    <p>{{ section.settings.description }}</p>

    {% if section.settings.show_button %}
        <a href="{{ section.settings.button_link }}" style="background-color: #007bff; color: white; padding: 10px 20px; text-decoration: none; border-radius: 5px;">{{ section.settings.button_text }}</a>
    {% endif %}

    {% if section.settings.banner_image %}
        <img width="100%" height="400px" src="{{ section.settings.banner_image}}">
    {% endif %}

    </div>